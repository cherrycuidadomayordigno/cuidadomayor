    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const welcomeMessageElement = document.getElementById('welcomeMessage');
            const messages = [
                "Tu Bienestar, Mi Prioridad",
                "Cuidado Profesional y EmpÃ¡tico",
                "AcompaÃ±amiento en Cada Paso",
                "Confianza y Tranquilidad para Tu Familia"
            ];
            let messageIndex = 0;

            function changeWelcomeMessage() {
                welcomeMessageElement.textContent = messages[messageIndex];
                messageIndex = (messageIndex + 1) % messages.length;
            }

            // Cambia el mensaje cada 4 segundos
            setInterval(changeWelcomeMessage, 4000);

            // Ejecuta el cambio de mensaje al cargar la pÃ¡gina
            changeWelcomeMessage();
        });
    </script>
